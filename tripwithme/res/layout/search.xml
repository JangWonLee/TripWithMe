<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tripwithme.MainActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/searchedit"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ff3c7cfe"
        android:layout_marginTop="100sp"
        android:background="#ffffffff"
        
     >
        <requestFocus />
    </EditText>
    
    <Button 
        android:id="@+id/seoulbutton"
        android:layout_width="fill_parent"
        android:layout_height="90dip"
        android:background="#00ff0000"
        android:layout_below="@id/searchedit"
        android:onClick="mOnClick"
        android:padding ="30dip"
        android:textColor="#ffffffff"
        android:text="seoul"
        android:textSize="25sp" />

	<TextView
        android:id="@+id/searchcitytext"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Search City"
        android:textColor="#ffffffff"
        android:textSize="20sp" 
        android:layout_marginBottom="15sp"/>
	
    <TextView
        android:id="@+id/ortext"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_above="@id/searchcitytext"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:text="Or"
        android:textSize="15sp" />
    
     <TextView
        android:id="@+id/selectcitytext"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_above="@id/ortext"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:text="Select City" />

</RelativeLayout>