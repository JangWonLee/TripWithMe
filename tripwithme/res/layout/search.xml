<?xml version="1.0" encoding="UTF-8"?>

 <RelativeLayout 
	tools:context="com.example.tripwithme.MainActivity$PlaceholderFragment" 
  	android:paddingTop="@dimen/activity_vertical_margin" 
  	android:paddingRight="@dimen/activity_horizontal_margin" 
  	android:paddingLeft="@dimen/activity_horizontal_margin" 
  	android:paddingBottom="@dimen/activity_vertical_margin" 
  	android:orientation="vertical" 
  	android:background="@drawable/background_2" 
  	android:layout_height="match_parent" 
  	android:layout_width="match_parent" 
  	xmlns:tools="http://schemas.android.com/tools" 
  	xmlns:android="http://schemas.android.com/apk/res/android">

	<AutoCompleteTextView 
	    android:layout_height="40dip" 
	    android:layout_width="match_parent" 
	    android:singleLine="true" 
	    android:layout_marginTop="100sp" 
	    android:layout_alignParentTop="true" 
	    android:hint="search" 
	    android:completionThreshold="1" 
	    android:id="@+id/autoedit"
	 />

	<Button 
	    android:background="#00ff0000" 
	    android:layout_height="90dip" 
	    android:layout_width="fill_parent" 
	    android:id="@+id/seoulbutton" 
	    android:textSize="25sp" 
	    android:text="seoul" 
	    android:textColor="#ffffffff" 
	    android:padding="30dip" 
	    android:onClick="mOnClick" 
	    android:layout_below="@id/autoedit"
	/>

	<TextView 
	    android:layout_height="30dip" 
	    android:layout_width="fill_parent" 
	    android:id="@+id/searchcitytext" 
	    android:textSize="20sp" 
	    android:text="Search City" 
	    android:textColor="#ffffffff" 
	    android:layout_marginBottom="15sp"
		android:gravity="center" 
		android:layout_alignParentBottom="true"
	/>

	<TextView 
	    android:layout_height="30dip" 
	    android:layout_width="fill_parent" 
	    android:id="@+id/ortext" 
	    android:textSize="15sp" 
	    android:text="Or" 
	    android:textColor="#ffffffff" 
	    android:gravity="center" 
	    android:layout_above="@id/searchcitytext"
	/>

	<TextView 
	    android:layout_height="30dip" 
	    android:layout_width="fill_parent" 
	    android:id="@+id/selectcitytext" 
	    android:textSize="20sp" 
	    android:text="Select City" 
	    android:textColor="#ffffffff" 
	    android:gravity="center" 
	    android:layout_above="@id/ortext"
	/>

</RelativeLayout>