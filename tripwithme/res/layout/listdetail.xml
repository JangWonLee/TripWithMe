<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:background="@drawable/background_2"
    android:orientation="vertical"
    >
    
    <Button
        android:padding="20dip"
        android:id="@+id/locationbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/locationbutton2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="mOnClick"
    />
    
    <TextView
        android:padding="100dip"
        android:id="@+id/listdetailtitletext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#ffffffff"
        android:gravity="center"
    />
    
    <TextView 
        android:id="@+id/introtext"
        android:padding="15dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listdetailtitletext"
        android:textSize="25sp"
        android:textColor="#ffffffff"
        android:gravity="center"
    />
    
    <TextView
        android:id="@+id/telephonetext"
        android:padding="15dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_below="@id/introtext"
		android:textSize="25sp"
        android:textColor="#ffffffff"
        android:gravity="center"
    />
    
    <TextView
        android:id="@+id/timetext"
        android:padding="15dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/telephonetext"
        android:textSize="25sp"
        android:textColor="#ffffffff"
        android:gravity="center"
     />
    
    <TextView
        android:id="@+id/listdetailmenutext"
        android:padding="15dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timetext"
        android:textSize="25sp"
        android:textColor="#ffffffff"
        android:gravity="center"
     />

</RelativeLayout>


