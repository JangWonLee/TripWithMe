<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.hi.mapmapkorea.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/selectmenu2"
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Select Menu"
        android:textColor="#ffffffff"
        android:textSize="20dip" />

    <Button
        android:id="@+id/restaurantbutton"
        android:layout_width="140dip"
        android:layout_height="150dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/restaurentmenuicon"
        android:onClick="mOnClick" />

    <Button
        android:id="@+id/tourbutton"
        android:layout_width="140dip"
        android:layout_height="150dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/restaurantbutton"
        android:layout_margin="5dip"
        android:background="@drawable/tourmenuicon"
        android:onClick="mOnClick" />

    <Button
        android:id="@+id/mapbutton"
        android:layout_width="140dip"
        android:layout_height="150dip"
        android:layout_above="@id/restaurantbutton"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dip"
        android:background="@drawable/mapicon"
        android:onClick="mOnClick" />

</RelativeLayout>