<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.hi.mapmapkorea.MainActivity$PlaceholderFragment" >

    <AutoCompleteTextView
        android:id="@+id/autoedit"
        android:layout_width="200dip"
        android:layout_height="40dip"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dip"
        android:completionThreshold="1"
        android:hint="search"
        android:singleLine="true"
        android:textSize="15dip" />

    <Button
        android:id="@+id/searchbutton"
        android:layout_width="145dip"
        android:layout_height="35dip"
        android:layout_marginTop="100dip"
        android:layout_toRightOf="@id/autoedit"
        android:background="#ff5D5D5D"
        android:onClick="mOnClick"
        android:text="Download"
        android:textColor="#ffffffff"
        android:textSize="18dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/searchbutton"
        android:orientation="vertical" >

        <Button
            android:id="@+id/citymapbutton1"
            android:layout_width="200dip"
            android:layout_height="60dip"
            android:layout_below="@id/autoedit"
            android:layout_gravity="center"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/citybuttonicon"
            android:gravity="center"
            android:onClick="mOnClick"
            android:textColor="#ffffffff"
            android:textSize="25dip"
            android:visibility="invisible" />

        <Button
            android:id="@+id/citymapbutton2"
            android:layout_width="200dip"
            android:layout_height="60dip"
            android:layout_below="@id/citymapbutton1"
            android:layout_gravity="center"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/citybuttonicon"
            android:gravity="center"
            android:onClick="mOnClick"
            android:textColor="#ffffffff"
            android:textSize="25dip"
            android:visibility="invisible" />

        <Button
            android:id="@+id/citymapbutton3"
            android:layout_width="200dip"
            android:layout_height="60dip"
            android:layout_below="@id/citymapbutton2"
            android:layout_gravity="center"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/citybuttonicon"
            android:gravity="center"
            android:onClick="mOnClick"
            android:textColor="#ffffffff"
            android:textSize="25dip"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/searchcitytext"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dip"
        android:gravity="center"
        android:text="Search City"
        android:textColor="#ffffffff"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/ortext"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_above="@id/searchcitytext"
        android:gravity="center"
        android:text="Or"
        android:textColor="#ffffffff"
        android:textSize="15dip" />

    <TextView
        android:id="@+id/selectcitytext"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_above="@id/ortext"
        android:gravity="center"
        android:text="Select City"
        android:textColor="#ffffffff"
        android:textSize="20dip" />

</RelativeLayout>