<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.hi.mapmapkorea.MainActivity$PlaceholderFragment" >

    <AutoCompleteTextView
        android:id="@+id/autoedit"
        android:layout_width="250dip"
        android:layout_height="40dip"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dip"
        android:completionThreshold="1"
        android:hint="search"
        android:singleLine="true"
        android:textSize="15dip"/>

    <Button
        android:id="@+id/searchbutton"
        android:layout_width="95dip"
        android:layout_height="35dip"
        android:layout_marginTop="100dip"
        android:layout_toRightOf="@id/autoedit"
        android:background="#ff5D5D5D"
        android:text="select"
        android:textColor="#ffffffff"
        android:onClick="mOnClick"
        android:textSize="18dip" />
    <Button
        android:id="@+id/seoulbutton"
        android:layout_width="fill_parent"
        android:layout_height="90dip"
        android:layout_below="@id/autoedit"
        android:background="#00ff0000"
        android:onClick="mOnClick"
        android:padding="30dip"
        android:text="seoul"
        android:visibility="invisible"
        android:textColor="#ffffffff"
        android:textSize="25dip" />

    <TextView
        android:id="@+id/searchcitytext"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dip"
        android:gravity="center"
        android:text="Search City"
        android:textColor="#ffffffff"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/ortext"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_above="@id/searchcitytext"
        android:gravity="center"
        android:text="Or"
        android:textColor="#ffffffff"
        android:textSize="15dip" />

    <TextView
        android:id="@+id/selectcitytext"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_above="@id/ortext"
        android:gravity="center"
        android:text="Select City"
        android:textColor="#ffffffff"
        android:textSize="20dip" />

</RelativeLayout>